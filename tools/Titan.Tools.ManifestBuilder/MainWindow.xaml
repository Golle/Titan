<Window x:Class="Titan.Tools.ManifestBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Titan.Tools.ManifestBuilder"
        mc:Ignorable="d"
        d:DesignHeight="400" d:DesignWidth="800"
        Height="800" Width="1200"
        Title="Titan - Assets">
    <Grid>
        <DockPanel>

            <StackPanel DockPanel.Dock="Bottom" Height="300" Background="red">
                <Button>A button</Button>
            </StackPanel>

            <StackPanel DockPanel.Dock="Left" Width="200" Background="blue">
                <Button IsEnabled="True" Click="ButtonBase_OnClick">Side</Button>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Background="green">
                <Button>Right</Button>
            </StackPanel>

        </DockPanel>

    </Grid>
</Window>
