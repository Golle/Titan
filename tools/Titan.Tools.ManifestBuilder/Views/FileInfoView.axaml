<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Titan.Tools.ManifestBuilder.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Titan.Tools.ManifestBuilder.Views.FileInfoView">

  <Design.DataContext>
    <viewModels:FileInfoViewModel/>
  </Design.DataContext>
  <StackPanel Spacing="4" IsVisible="{Binding !!FileName}">
    <TextBlock Text="{Binding FileName, StringFormat='Name: {0}'}"/>
    <TextBlock IsVisible="{Binding !!Size}" Text="{Binding Size, StringFormat='Size: {0} bytes'}"/>
    <TextBlock Text="{Binding FileCreated, StringFormat='Created: {0}'}"/>
    <TextBlock Text="{Binding FileChanged, StringFormat='Changed: {0}'}"/>
  </StackPanel>
</UserControl>
